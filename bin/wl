#! /bin/bash -e

#Environment settings
. /usr/local/worklog/bin/env-settings

#constants
DEFAULT_EDITOR="mate --wait"
#variables
action=

print_usage() {
	echo "Usage:" 
	echo "    `basename $0` <text to log>"
	echo "    `basename $0` -o"
	echo "    `basename $0` -e"
	echo "    `basename $0` -h"
	echo "    `basename $0` -r <id>"
	echo ""
	echo "	-e 	Opens the editor defined in WL_EDITOR (default $DEFAULT_EDITOR)."
	echo "	-o 	Opens the editor window."
	echo "	-r 	Removes a log identified with permaLink <id>."
	echo "	-h 	Print this help."
	echo ""
}

open_system_editor() {
	if [ -z "$WL_EDITOR" ]; then
		WL_EDITOR="$DEFAULT_EDITOR"
	fi
	#tmpfile=`mktemp NEWLOG.XXXXX`
	tmpfile=".wl.pillar"
	# ensure it does not exists
	if [ -e $tmpfile ]; then
		rm -f $tmpfile
	fi
	$WL_EDITOR $tmpfile
	if [ ! -s $tmpfile ]; then
		rm -f $tmpfile
		exit
	fi
	$CMD --add --file="`pwd`/$tmpfile"
	rm -f $tmpfile
	exit
}

open_inner_editor() {
	$CMD --open-editor
	exit
}

remove_log() {
	$CMD --remove --id="$1"
	exit
}

while getopts "eohr:" option; do 
	case "$option" in
		e) open_system_editor ;;
		o) open_inner_editor ;;
		r) remove_log $OPTARG ;;
		h) 
			print_usage
			exit 1
			;;
		\?)
      		echo "Invalid option: -$OPTARG" >&2
      		exit 1
      		;;
	esac
done

# DEFAULT: we just send the entered text to edit
$CMD --add --text="$*"

